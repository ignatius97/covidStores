extends manager_layout
block content
    h2 Sales
    hr
    style.
        
        
        .container-fluid{
            overflow:auto;
        }



        
    h2 All Product&nbsp&nbsp

    
    hr
    table.table
        thead.thead-dark
            tr
                
                th product_name
                th serial_number
                th Details
                
                
        tbody(style="background-color: rgba(255,255,255,0.5);") 
            each new_sale in new_sales  
                tr
                    form(method="get" action='/admin/sales' )
                        td #{new_sale._id.product_name}   
                        td #{new_sale._id.serial_number}
                        //- td #{new_sale._id.customer_ref_no}
                        td 
                            input(type="hidden", placeholder="", name="serial_number", value=new_sale._id.serial_number)
                            input(type="hidden", placeholder="", name="customer_ref_no", value=new_sale._id.customer_ref_no)
                            button.btn.btn-dark.btn-block(type="submit" ) Details
                    
                        
                    