extends manager_layout
block content
    style.
        .submit_buttom {
            text-align:right;
        }
    
    fieldset.form-group.border.p-3(style="background-color: rgba(255,255,255,0.5);")   
        legend.w-auto Add New Sales Agent
        div.employee_form
            form(action="submit_new_employee" method="POST").form-group
                div.row
                    div.col-sm-12.col-md-6
                        div.label
                            label(for="firstname") First Name *
                        div
                            input.form-control(type="text" name="firstname" placeholder="First Name" required)
                        div.label
                            Label(for="lastname") Last Name *
                        div
                            input.form-control(type="text" name="lastname" placeholder="Last Name" required)
                        div.label
                            Label(for="phone_number") Phone Number *
                        div
                            input.form-control(type="text" name="phone_number" placeholder="Phone Number" required)
                        div.label
                            Label(for="email") Email
                        div
                            input.form-control(type="text" name="email" placeholder="Email")
                        div.label
                            Label(for="address") Address
                        div
                            input.form-control(type="text" name="address" placeholder="Address") 
                            
                            
                    div.col-sm-12.col-md-6
                        div.label
                            Label(for="national_id_no") National Id Number *
                        div
                            input.form-control(type="text" name="national_id_no" placeholder="National Id Number" required)
                        div.label
                            Label(for="manager_id_no") Employee Id Number *
                        div
                            input.form-control(type="text" name="employee_id_no" placeholder="Employee Id Number" required)
                        div.label
                            label(for="username") User Name *
                        div
                            input.form-control(type="text" name="username" placeholder="User Name" required)
                        div.label
                            Label(for="password") Password *
                        div
                            input.form-control(type="password" name="password" placeholder="Password" required) 
                                
                br    
                div.submit_buttom 
                    button.btn.btn-primary Submit
        