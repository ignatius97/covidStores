extends employee_layout
block content
    style.
  
            .description{
                display: grid;
                    position: relative;
                    margin-top:-75px;
                    bottom: 0;
                    left: 0;
                    color: #fff;
                    padding: 10px;
                    font-size: 17px;
                    line-height: 18px;
                    width: 100%;
                    padding-top: 15px;
                    padding-bottom: 15px;
                    opacity: 1;
                    color: #fff;
                    transition: 0.8s ease;
                    text-align: center;
                    text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
                    background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.9));
                }

                .description .description-heading{
                font-size: 1em;
                font-weight: bold;
                }

                .description .description-body{
                font-size: 0.8em;
                margin-top: 10px;
                font-weight: 300;
                }
                @media only screen and (max-width: 780px){
                .col-sm-6{
                    width:50%;
                    float:left;
                }
                .card.video-card{
                    height:22vh;
                    margin-bottom:20px;
                }
                .lowerbody{
                    margin-top: -65px;
                }
                
                }
                @media only screen and (min-width: 780px){
                
                .card.video-card{
                    height:33vh;
                    margin-bottom:20px;
                }
                
                
                }
                .col-sm-6{
                    margin-bottom: 10px;
                }


                
                    
               
    h2 Category &nbsp&nbsp 
