        //-                     div.input-group-append
        //-                         button.input-group-text
        //-                             i(aria-hidden="true").fa.fa-search
        br                            
    hr
    div          
        //- h1(style="background-color: rgba(0,0,0,0.2)") Fushion
            
        div.row
            
            each new_product in new_products
                div.col-sm-6.col-md-3
                    form(method="GET" action='/emp/add_new_payment')
                        input(type="hidden", placeholder="", name="id", value=new_product._id)
                        button.btn.btn-dark.btn-block(type="submit" )
                            div.card-deck(style="background-color:white;")
                                div.card.video-card
                                    img(src=new_product.product_image , alt="No Image" style="width:100%; height:100%;")
                                    div.description
                                        span.description-heading #{new_product.price}
                                        span.description-body #{new_product.product_name}
                                          

                                
