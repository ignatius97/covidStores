        .wave{
        position: fixed;
        z-index: 1;
        width: 100%;
        height: 6vh;
        bottom: 0;
        left: 0;
        opacity: 0.8;
        background: url(/images/wave.png);
        background-size:1360px 100%;
        animation: animate 10s linear infinite;
        }
        .wave:before{
        content: '';
        position: absolute;
        width: 100%;
        height: 6vh;
        background: url(/images/wave.png);
        background-size:1360px 100%;
        top: 0;
        left: 0;
        opacity: 0.4;
        animation: animate-reverse 10s linear infinite;
        }
        .wave:after{
        content: '';
        position: absolute;
        width: 100%;
        height: 6vh;
        background: url(/images/wave.png);
        background-size:1360px 100%;
        top: 0;
        left: 0;
        opacity: 0.6;
        animation-delay: -5s;
        animation: animate 20s linear infinite;
        }
        @keyframes animate
        {
        0%{
        background-position: 0;
        }
        100%{
        background-position: 1360px;
        }
        }
        @keyframes animate-reverse
        {
        0%{
        background-position: 1360px;
        }
        100%{
        background-position: 0;
        }
        }
